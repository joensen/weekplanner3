# Server Configuration
PORT=3000

# Mock Mode - Set to 'true' to use simulated data without real API integrations
# This is useful for testing the UI before setting up Google/Microsoft accounts
MOCK_MODE=true

# Google Calendar API
# Get your API key from Google Cloud Console
GOOGLE_API_KEY=your_google_api_key_here

# Calendar IDs (from Google Calendar settings)
CALENDAR_ID_1=primary
CALENDAR_ID_2=family@group.calendar.google.com
CALENDAR_ID_3=
CALENDAR_ID_4=
CALENDAR_ID_5=
CALENDAR_ID_6=
CALENDAR_ID_7=

# Microsoft Graph API (for Microsoft Todo)
# Register an app at https://portal.azure.com
MICROSOFT_CLIENT_ID=your_client_id
MICROSOFT_CLIENT_SECRET=your_client_secret
MICROSOFT_REFRESH_TOKEN=your_refresh_token
MICROSOFT_TENANT_ID=common

# Todo List IDs (from Microsoft Graph API)
TODO_LIST_ID_1=
TODO_LIST_ID_2=
TODO_LIST_ID_3=

# Push Notifications
PUSH_ENABLED=false
WEBHOOK_URL=https://info.joensen.eu/api/webhook
